script.

  function save(){
       $("#preloader").show(); 
       var emailname = $("#emailname").val();
       var Subject = $("#Subject").val();
       var message = $("#comment").val();
      
        var data = {
         emailname : emailname,
         Subject : Subject,
         message : message
         }
        var request = $.ajax({
            url: "/contact_us",
            type: "POST",
            headers: {
                'Content-Type': 'application/json'
            },
            data: JSON.stringify(data),
            
        });

        request.done(function(data) {
          $("#preloader").hide();   
              swal({
                  title: "Success!",
                  text: "Thanks!",
                  icon: "success",
                });    

              window.location = "/"; 
          
        });

  };
