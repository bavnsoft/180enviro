script.

  function save(){
     
       var emailname = $("#emailname").val();
       var Subject = $("#Subject").val();
       var message = $("#comment").val();

       if(!emailname){
          $("#message_error").show();

          $("#message_error h1").html('Please enter email address');
          setTimeout(function(){
               $("#message_error").hide();
          
          },3000);
         return false
       }

      if(!Subject){
          $("#message_error").show();

          $("#message_error h1").html('Please enter subject');
          setTimeout(function(){
               $("#message_error").hide();
          
          },3000);
          return false
   
       }
       if(!message){
          $("#message_error").show();

          $("#message_error h1").html('Please enter message');
          setTimeout(function(){
               $("#message_error").hide();
          
          },3000);

          return false
   
       }

        $("#preloader").show(); 
      
        var data = {
         emailname : emailname,
         Subject : Subject,
         message : message
         }
        var request = $.ajax({
            url: "/contact_us",
            type: "POST",
            headers: {
                'Content-Type': 'application/json'
            },
            data: JSON.stringify(data),
            
        });

        request.done(function(data) {
          $("#preloader").hide();   
              swal({
                  title: "Success!",
                  text: "Inquiry recevied. Thanks.",
                  icon: "success",
                });    

              window.location = "/"; 
          
        });

  };
